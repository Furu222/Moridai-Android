<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMake" >

    <TextView
        android:id="@+id/FragmentMakeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="@string/fragment_make_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:gravity="center" />

    <Button
        android:id="@+id/FragmentMakeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FragmentMakeLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="@string/fragment_make_button"
        android:textColor="@color/white" />

</RelativeLayout>